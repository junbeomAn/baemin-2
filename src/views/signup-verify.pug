extends layout 

block styles
    link(rel="stylesheet", href="/styles/common.css")
    link(rel="stylesheet", href="/styles/signup-verify.css")
block header
    header.signup-verify
            button.prev-btn
                img.prev-btn-image(src="/image/뒤로가기.png", alt="뒤로가기")
            div.signup-title 회원가입
            button.next-btn 다음
block content
    form.signup-verify-container
        div.input-container
            label(for="phone") 전화번호
            input#phone.input1(type="tel", autofocus, name="phone", placeholder="휴대전화 번호를 입력하세요", maxLength="13")
            div.reset-phone-number
                img(src="/image/지우기.png", alt="지우기")
            div.phone-number-validation
                img(src="/image/검증_F.png", alt="검증")
    button.verify-number-btn.btn1.show 인증번호 받기
    div.input-container.hidden.verify
        label(for="verify-number") 인증번호
        input#verify-number.input1(placeholder="인증번호를 입력해주세요")
        button.verify-number-again-btn 인증번호 다시받기

    script(src="../scripts/signup.js") 

            